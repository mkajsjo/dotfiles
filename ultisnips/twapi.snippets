snippet selectfold
Conn = tw_context:get_db_connection(Ctx),
Query =
	{
		select, [${1}],
		from, ${2:Table},
		where, [${3}]
	},
${4:Row}s = tw_db:rows(Conn, Query),
${8:Map} =
	lists:foldl(
		fun (${6:$4}, ${7:Acc}) ->
				${8:Acc}
		end,
		${5:#{}},
		$4s
	),
$4,
${9}
endsnippet


