extends python

snippet /\d/ "" r
$\{`!p snip.rv = match.group(0)`:${1:Arg}}${2}
endsnippet

snippet s
snippet ${1:trigger}
${2}
`echo 'endsnippet'`
endsnippet

snippet s!
snippet ${1:trigger} "${2}" ${3}
${4}
`echo 'endsnippet'`
endsnippet

snippet v "" i
$\{VISUAL:${VISUAL}}
endsnippet

snippet wrap
snippet ${1:trigger}
${VISUAL/\(/(${VISUAL}/}
`echo 'endsnippet'`
endsnippet

